<!DOCTYPE html>
<html lang="es">
<%- include('./partials/header.ejs'); %>

    <body>
        <%- include('./partials/navbar.ejs'); %>

            <% if (products){ %>
                <h1>Product list</h1>

                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Title</th>
                            <th scope="col">Price</th>
                            <th scope="col">Thumbnail</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Itera los productos, por cada uno crea una nueva fila  -->
                        <% products.forEach( function(product){ %>
                            <tr>
                                <th scope="row">
                                    <%= product.id %>
                                </th>
                                <th>
                                    <%= product.title %>
                                </th>
                                <th>
                                    <%= product.price %>
                                </th>
                                <th> <img src=<%=product.thumbnail %> width="30" class="img-thumbnail"> </th>
                            </tr>
                            <!-- Termina la iteracion -->
                            <% }); %>
                    </tbody>
                </table>
                <% }else{ %>
                    <div class="alert alert-danger">
                        <strong>Alert!</strong> There are no products
                    </div>
                    <% } %>
    </body>

</html>